---
import Layout from "./Layout.astro";
interface Props {
  title: string;
  subtitle?: string;
  description: string;
  noindex?: boolean;
}

const { title, subtitle, description, noindex = false } = Astro.props;
---

<Layout metaDescription={description} title={title} {noindex}>
  <hgroup class="mt-12 mb-8 border-b pb-2 w-fit pr-12">
    <h1 class="mb-2 text-4xl uppercase font-semibold">{title}</h1>
    {subtitle && <p class="text-lg text-gray-700 dark:text-white">{subtitle}</p>}
  </hgroup>
  <slot class="prose" />
</Layout>
