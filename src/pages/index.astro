---
// Imports for the different components used by the page.
import ContactForm from "../components/Contact.astro";
import Header from "../components/Header.astro";
import HR from "../components/atoms/HR.astro";
import Layout from "../layouts/Layout.astro";
import Logo from "../components/atoms/Logo.astro";
import Posts from "../components/Posts.astro";
import PreviousClients from "../components/Testimonials.astro";
import Principles from "../components/Principles.astro";
import Services from "../components/Services";
import SocialIcon from "../components/atoms/SocialIcon.astro";

// Import for the Principles section's hero image. To use a different image, edit the file name below.
import PrinciplesImage from "../../src/images/adam_phones.webp";

// Imports for the logo images. If you're adding a new logo, you can give it any alias (e.g. 'Bletchley Park' could have been 'Bletch Park', 'BP', etc). Just make sure you refer to the same alias when creating the Logo component.
import BletchleyPark from "../../src/images/bp.svg";
import BM from "../../src/images/bm.svg";
import GoodLawProject from "../../src/images/goodlawproject.svg";
import HistoricEngland from "../../src/images/historicengland.svg";
import LondonArtStudies from "../../src/images/londonartstudies.webp";
import MuseumsAssociation from "../../src/images/museumsassociation.svg";
import MuseumsGalleriesEdinburgh from "../../src/images/museumsgalleriesedinburgh.webp";
import TripleC from "../../src/images/triplec.webp";

// Aliases for social icons. Just makes the code a tiny bit cleaner.
const xIcon = "tabler:brand-x";
const linkedinIcon = "tabler:brand-linkedin";
---

<Layout
  metaDescription={"Adam Koszary is an expert in social media and digital engagement for museums, galleries, libraries, archives, and theatres." /** page meta description */}
  title={"Adam Koszary" /** if title is 'adam koszary', no ' | Adam Koszary' gets added after */}
  ready={true /** accepts true or false */}
>
  <Header title="Adam Koszary">
    <!-- Social icons -->
    <SocialIcon
      title="Twitter"
      url="https://x.com/AdamKoszary"
      name={xIcon /** social icons are defined at lines 27 & 28 */}
      data-testid="twitter-follow-button"
    />
    <SocialIcon
      title="Linkedn"
      url="https://www.linkedin.com/in/adam-koszary/"
      name={linkedinIcon /** social icons are defined at lines 27 & 28 */}
      data-testid="linkedin-follow-button"
    />
  </Header>
  <HR />
  <Services client:load />
  <HR />
  <Principles heroImage={PrinciplesImage} />
  <HR />
  <PreviousClients title="Previous clients">
    <Logo
      org="British Museum"
      logoImage={BM}
      url="https://www.britishmuseum.org/"
      date-testid="bm-button"
    />
    <Logo
      org="Historic England"
      logoImage={HistoricEngland}
      url="https://historicengland.org.uk/"
      data-testid="historic-england-button"
    />
    <Logo
      org="Good Law Project"
      logoImage={GoodLawProject}
      url="https://goodlawproject.org/"
      data-testid="good-law-project-button"
    />
    <Logo
      org="Museums Association"
      logoImage={MuseumsAssociation}
      url="https://www.museumsassociation.org/"
      data-testid="ma-button"
    />
    <Logo
      org="Bletchley Park"
      logoImage={BletchleyPark}
      url="https://bletchleypark.org.uk/"
      data-testid="bletchley-park-button"
    />
    <Logo
      org="Triple C"
      logoImage={TripleC}
      url="https://triplec.org.uk/"
      data-testid="triple-c-button"
    />
    <Logo
      org="London Art Studies"
      logoImage={LondonArtStudies}
      url="https://londonartstudies.com/"
      data-testid="london-art-studies-button"
    />
    <Logo
      org="Museums & Galleries Edinburgh"
      logoImage={MuseumsGalleriesEdinburgh}
      url="https://www.edinburghmuseums.org.uk/"
      data-testid="museums-galleries-edinburgh-button"
    />
  </PreviousClients>
  <HR />
  <ContactForm
    description="Interested in what I do and how I can help? Chatting to me is free, and I can work to your budget :)"
    title="Get in touch"
  />
  <HR />
  <Posts title="Posts" />
  <HR />
</Layout>
