---
import { Image } from "astro:assets";

interface Props {
    src: ImageMetadata;
    alt: string | null;
    loading?: "eager" | "lazy" | null;
}

const { src, alt, loading } = Astro.props;
---

<div class="w-full flex justify-center md:w-2/5">
    <div class="relative w-full overflow-hidden rounded-sm aspect-square md:max-w-md">
        <Image src={src} alt={alt} loading={loading} />
    </div>
</div>
