---
interface Props {
    width?: string;
    startColor?: string;
    endColor?: string;
    variant?: 'solid' | 'dashed' | 'dotted';
}

const { 
    width = 'w-3/4', 
    startColor = 'from-transparent via-gray-300 to-transparent',
    endColor = 'dark:from-transparent dark:via-gray-600 dark:to-transparent',
    variant = 'solid' 
} = Astro.props;

const variantClasses = {
    solid: '',
    dashed: 'border-dashed border-y-2 bg-clip-content',
    dotted: 'border-dotted border-y-2 bg-clip-content'
};

---

<div class="flex items-center justify-center my-16">
    <div class={`${width} h-px ${variantClasses[variant]}`}>
        <div class={`w-full h-full bg-gradient-to-r ${startColor} ${endColor}`}></div>
    </div>
</div>