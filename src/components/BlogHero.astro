---
import { Picture } from "astro:assets";

interface Props {
    src: string;
    alt: string;
    height?: number;
    width?: number;
    className?: string;
}

const { src, alt, height = 200, width = 2000, className } = Astro.props;
---

<div
    class="w-full rounded-sm aspect-video md:mb-6 mb-4"
>
    <a href={Astro.url.pathname}>
        <Picture
            {width}
            {height}
            loading="eager"
            src={src}
            alt={alt}
            class={className}
            fetchpriority="high"
        />
    </a>
</div>
