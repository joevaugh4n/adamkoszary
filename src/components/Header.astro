---
import Nav from "./Nav.astro";
import Socials from "./Socials.astro";

interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<header class="md:min-h-screen subpixel-antialiased border-b-2">
  <Nav />
  <hgroup class="md:py-40 py-20">
    <h1 class="md:text-8xl text-6xl uppercase tracking-tight mb-4">
      {title}
    </h1>
    <p class="text-4xl font-light text-pretty">{subtitle}</p>
  </hgroup>
  <Socials />
</header>
