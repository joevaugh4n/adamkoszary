---
import Socials from "./Socials.astro";
import { fetchPageContent } from "../lib/wordpress";

interface Props {
  slug: string;
}

const { slug } = Astro.props;

const { content: fetchedContent } = await fetchPageContent(slug);
---

<header
  id="home"
  class="xl:min-h-screen max-w-7xl mx-auto subpixel-antialiased flex flex-col"
>
  <hgroup class="lg:py-20 py-12">
    <h1 class="lg:text-9xl text-6xl uppercase tracking-tight mb-8">
      Adam Koszary
    </h1>
    <div
      class="dark:text-white text-2xl prose prose-a:dark:text-white"
      set:html={fetchedContent}
    />
  </hgroup>
  <Socials />
</header>
