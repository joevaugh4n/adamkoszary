---
import SocialIcon from "./atoms/SocialIcon.astro";

interface Props {
    url: string;
}

const { url } = Astro.props;
---

<aside class="flex flex-col">
    <div class="flex gap-2 mb-4 md:justify-start justify-center items-end">
        <SocialIcon
            name="tabler:brand-x"
            title="Follow me on Twitter"
            type="inline"
            url="https://x.com/AdamKoszary"
        />
        <SocialIcon
            name="tabler:brand-Linkedin"
            title="Follow me on LinkedIn"
            type="inline"
            url="https://linkedin.com/in/adam-koszary"
        />
        <a class="prose hover:underline" href={Astro.url.pathname}>Permalink</a>
    </div>
</aside>
