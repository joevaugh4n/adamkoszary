---
import H2 from "./atoms/H2.astro";

interface Props {
  title?: string;
  description?: string;
  blurb: boolean;
}

const {
  title = "Get in touch",
  description = "Interested in what I do and how I can help? Chatting to me is free, and I can work to your budget :)",
  blurb = true,
} = Astro.props;
---

<section class="w-full mx-auto" id="contact">
  <div class="lg:grid lg:grid-cols-2 lg:gap-12 items-start">
    {
      blurb && (
        <div class="mb-6 lg:mb-0">
          <H2 title={title} />
          <p class="md:text-lg text-gray-600 dark:text-white max-w-prose text-pretty">
            {description}
          </p>
        </div>
      )
    }

    <form
      name="contact"
      method="POST"
      action="/thank-you"
      data-netlify="true"
      data-netlify-recaptcha="true"
      class="rounded-sm group transition-colors"
      action="/thank-you"
      autocomplete="on"
    >
      <p class="hidden">
        <label>
          Don't fill this out if you're human: <input name="bot-field" />
        </label>
      </p>
      <div class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium mb-1"
            >Your Name</label
          >
          <input
            type="text"
            id="name"
            name="name"
            placeholder="John Doe"
            class="w-full px-4 py-2 border rounded-sm focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder:font-mono bg-transparent placeholder:text-sm"
            required
            autocomplete="name"
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium mb-1"
            >Your Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            placeholder="johndoe@example.com"
            class="w-full px-4 py-2 border rounded-sm focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder:font-mono bg-transparent placeholder:text-sm"
            required
            autocomplete="email"
          />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium mb-1"
            >Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="6"
            placeholder="Type your message here..."
            class="w-full px-4 py-2 border rounded-sm focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder:font-mono bg-transparent placeholder:text-sm"
            required
            autocomplete="off"></textarea>
        </div>
      </div>

      <div data-netlify-recaptcha="true" class="mt-6"></div>

      <div class="mt-4">
        <input type="checkbox" id="consent" name="consent" required />
        <label
          for="consent"
          class="text-sm text-pretty text-gray-600 dark:text-white"
        >
          I agree to the processing of my personal data in accordance with the <a
            href="/privacy-policy"
            class="dark:text-white font-sembiold underline">Privacy Policy</a
          >.
        </label>
      </div>

      <div class="mt-2">
        <input type="checkbox" id="newsletter" name="newsletter" />
        <label
          for="newsletter"
          class="text-sm text-pretty text-gray-600 dark:text-white"
        >
          Would you like to join my Content of the Week newsletter?
        </label>
      </div>

      <div class="mt-8">
        <button
          type="submit"
          class="w-full bg-blue-600 text-white font-bold py-3 px-6 rounded-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-300 hover:cursor-pointer hover:bg-green-500 hover:text-white"
        >
          Submit
        </button>
      </div>
    </form>
  </div>
</section>
