---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<div class="flex justify-center">
  <section class="py-8 gap-x-16 gap-y-6 border-b-2 w-full">
    <hgroup class="mb-8">
      <h2 class="text-4xl mb-2 uppercase">{title}</h2>
      {description && <p class="prose dark:prose-invert">{description}</p>}
    </hgroup>
    <div class="grid md:grid-cols-3 grid-cols-2 gap-8">
      <slot />
    </div>
  </section>
</div>
